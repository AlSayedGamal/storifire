<% @stories.each do |story| %>
<blockquote>
<h4>Story name: <%= story.title %></h4>
<script type='text/javascript'>
$(documemt).ready(function(){

});
ShowLMCButton('As <%= story.role.name %>, I\'ll <%= story.need %> so that I can <%= story.goal %>', 'copy')
