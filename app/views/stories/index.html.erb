	<%= link_to 'Edit', edit_story_path(story) %> |
	<%= link_to 'Destroy', story, confirm: 'Are you sure?', method: :delete %>|
	<%= link_to 'Image', yumlimg_path(story) %> |
	<%= link_to 'Role stories', yumlroles_path(story) %> |
	<%= link_to 'steps', steps_of_path(story) %>
